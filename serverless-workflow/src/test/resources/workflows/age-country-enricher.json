{
  "name": "example-workflow",
  "states": [
    {
      "start": true,
      "type": "OPERATION",
      "name": "Calculate user is an adult",
      "action-mode": "SEQUENTIAL",
      "actions": [
        {
          "function": {
            "name": "Set adult",
            "metadata": {
              "type": "Rest",
              "url": "http://test-services.192.168.39.232.xip.io/age"
            }
          }
        },
        {
          "function": {
            "name": "Log is adult",
            "metadata": {
              "type": "Log",
              "field": "$.adult",
              "level": "INFO"
            }
          }
        }
      ],
      "next-state": "Calculate country code"
    },
    {
      "type": "OPERATION",
      "name": "Calculate country code",
      "action-mode": "SEQUENTIAL",
      "filter": {
        "input-path": "$.country",
        "result-path": "$.iso",
        "output-path": "$.country.iso"
      },
      "actions": [
        {
          "function": {
            "name": "Set country code",
            "metadata": {
              "type": "Rest",
              "url": "http://localhost:8080/country"
            }
          }
        },
        {
          "function": {
            "name": "Log country code",
            "metadata": {
              "type": "Log",
              "field": "$.iso",
              "level": "INFO"
            }
          }
        }
      ],
      "next-state": "end"
    },
    {
      "status": "SUCCESS",
      "name": "end",
      "type": "END"
    }
  ]
}